<section>
    <div class="row">
        <div class="col s12 m4">
            <a href="/" class="button waves-effect waves-light btn-flat"><i class="material-icons left">arrow_backward</i>Back</a>
        </div>
    </div>
</section>

<!-- POST CONTENT -->

<section id="post" class="row z-depth-2">

    <div class="col s6">
    <h5>{{post.title}}</h5>
        <a href="{{post.post_url}}" target="_blank">
            
            <h6>{{post.post_url}}</h6>
        </a>
        <p id="content">{{post.post_content}}</p>
    </div>
    <div class="col s6 right-align">
        <p>Posted by: <a href="#">{{post.user.username}}</a></p>
        <p>at {{post.created_at}}</p>
    </div>
</section>

<!-- END POST CONTENT -->

<!-- ADD COMMENT HERE -->
{{#if loggedIn}}
    <section id="post" class="row z-depth-2">
    <div class="col s12">
        <p>Comment on this post: </p>
        <div class="row">
            <form class="col s12" id="comment-form">
                <div class="input-field col s8">
                    <textarea id="post-content" class="materialize-textarea"></textarea>
                    <label for="post-content"></label>
                </div>
                <div class="col s12 left-align">
                    <button class=" btn waves-effect waves-light" type="submit" name="action">Save
                        Changes<i class="material-icons right">send</i></button>
                </div>
            </form>
        </div>
    </div>
    </section>
{{else}}
    <h5>Log in to comment!</h5>
{{/if}}
<!-- END USER COMMENT SECTION -->

<!-- Comment list -->
    <ol class="comment-list">
        {{#each post.comments as |comment|}}
        <article class="post row z-depth-2">
            <div class="col s12">
                <p>Posted by: {{comment.user.username}} at {{comment.created_at}}</p>
                <div class="divider"></div>
                <p>{{comment.comment_text}}</p>
            </div>
        </article>
        {{/each}}
    </ol>
<!-- End Comment list -->